<div id="navbar-sticky" class="navbar navbar-expand-sm navbar-light navbar-lewagon"
     data-controller="colored"
     data-colored-target="colored"
     data-action="scroll@window->colored#onScroll">
  <div class="container-fluid">
    <%= link_to "/", class: "navbar-brand" do %>
      <%= image_tag "Al_ine Logo 3.png", alt: "Logo Aline", class: "navbar-logo" %>
    <% end %>

    <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
            data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
            aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto">
        <li class="nav-item">
          <%= link_to "Accueil", root_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "Projets", projects_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "À propos de moi", "#", class: "nav-link" %>
        </li>
        <% if user_signed_in? %>
          <li class="nav-item">
            <%= link_to "Nouveau projet", new_project_path, class: "nav-link" %>
          </li>
        <% end %>
      </ul>

      <ul class="navbar-nav ms-auto">
        <% if user_signed_in? %>
          <li class="nav-item dropdown">
            <a href="#" class="avatar nav-link dropdown-toggle" id="navbarDropdown"
               data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              <%= image_tag "PDP Blanc.png", class: "avatar", alt: "dropdown menu" %>
            </a>
            <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
              <%= link_to "Mon profil", "#", class: "dropdown-item" %>
              <%= link_to "Déconnexion", destroy_user_session_path,
                          data: { turbo_method: :delete }, class: "dropdown-item" %>
            </div>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to "Connexion", new_user_session_path, class: "nav-link" %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
