<%= simple_form_for @project do |f| %>
  <%= f.association :customer, label: 'Client', prompt: 'Entrer un client', required: true  %>
  <%= f.input :tag_ids, label: 'Tags', as: :select, collection: Tag.pluck(:name, :id), input_html: {multiple: true, class: 'tag-select'} %>
  <%= f.input :title, label: 'Titre', placeholder: 'Entrer un nom', required: true  %>
  <%= f.input :description, label: 'Description', placeholder: 'Entrer une description', required: true  %>
  <%= f.input :constraint, label: 'Contrainte', placeholder: 'Entrer un contrainte' %>
  <%= f.input :implementation, label: 'Mise en oeuvre', placeholder: 'Entrer une mise en oeuvre' %>
  <%= f.input :visibility, as: :boolean, label: 'Visibilité'%>
  <%= f.input :url, label: 'Url' %>
  <%= f.input :medias, as: :file, input_html: {multiple: true}, label: 'Media', placeholder: 'Entrer un media', required: true  %>
  <%= f.button :submit, "Créer", class:'discover-button-clair' %>
<% end %>
