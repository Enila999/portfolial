
<div class="banner ">
   <h1 class="page-title">Projets</h1>
  </div>
</div>

<div class="container">


<div class="project-index-grid">
  <% @projects.each do |project| %>
    <div class="card">
      <%= image_tag project.logo, alt: "Logo de #{project.customer}", class: "card-img-top-index" %>
      <div class="card-index-body">
        <h2 class="card-index-title"><%= project.customer %></h2>
        <p class="card-index-text"><%= project.description %></p>
        <a href="<%= project.url_media %>" target="_blank" class="discover-button-all">Voir le projet</a>
      </div>
    </div>
  <% end %>
</div>



<div data-controller="toggle" class="mt-5" data-toggle-target="togglableElement" class="d-none">
  <button data-action="click->toggle#fire" class="discover-button-all">Nouveau projet</button>
  <%= render "form", project: @project %>
</div>

<%= link_to "New project", new_project_path %>
</div>
